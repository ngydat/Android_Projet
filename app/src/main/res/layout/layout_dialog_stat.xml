<GridLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:columnOrderPreserved="true"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >



    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="Vos points :"
        />

    <TextView
        android:id="@+id/pointJoueurTextView"
        android:layout_column="2"
        />

    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="Etape courante :"
        />

    <TextView
        android:id="@+id/derniereEtapeTextView"
        android:layout_column="2"
        />
    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="Temps total :"
        />

    <TextView
        android:id="@+id/tempsTotalTextView"
        android:layout_column="2"
        />

    <TextView
        android:layout_column="0"
        android:gravity="right"
        android:text="Nb d'epreuves realisÃ©es :" />

    <TextView
        android:id="@+id/derniereEpreuveTextView"
        android:layout_column="2" />


    <TextView
        android:layout_column="0"
        android:layout_gravity="left"
        android:text="Votre progression :"
        />
    <Space
        android:layout_width="60dp"
        android:layout_column="1"
        android:layout_gravity="fill_vertical"/>

    <ProgressBar android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="10dp"
        />







</GridLayout>