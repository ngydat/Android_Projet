<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ipl.android_projet.FinActivity"
    tools:showIn="@layout/activity_fin">


    <TextView
        android:id="@+id/tv_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_fin"
        android:textAppearance="@style/Question_style"
        />
    <TextView
        android:id="@+id/tv_classement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Classement"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/classement_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_classement"
        android:layout_margin="20dp"
        />

    </RelativeLayout>

